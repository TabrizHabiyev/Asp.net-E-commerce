@model IEnumerable<ContactDetails>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Features</h4>
            <p class="card-description">
                <a asp-controller="ContactDetails" asp-action="Create" class="btn btn-success">Create</a>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Address
                            </th>
                            <th>
                                Phones
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                OpenClosed
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @item.Address
                            </td>
                            <td>
                                @item.PhoneHotline  <br/>
                                @item.PhoneMobile
                            </td>
                            <td>
                                @item.Email
                            </td>
                            <td>
                                @if (item.Description.Length > 15)
                                {
                                    item.Description.Substring(0, 15);
                                }
                                else
                                {
                                    @item.Description
                                }

                            </td>
                            <td>
                                @item.OpenClosed
                            </td>
                            <td>
                                <a asp-controller="ContactDetails" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success"><i class="mdi mdi-table-edit"></i></a>
                                <a asp-controller="ContactDetails" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

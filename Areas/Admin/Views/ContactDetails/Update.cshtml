@model ContactDetails
@{
    ViewData["Title"] = "Create";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic form elements</h4>
            <p class="card-description">
                Basic form elements
            </p>
            <form class="forms-sample" method="Post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Description</label>
                    <textarea value="@Model.Description" type="text" asp-for="Description" id="exampleInputName1"></textarea>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Adress</label>
                    <input value="@Model.Address" type="text" asp-for="Address" id="exampleInputName1" placeholder="Adress">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Hotline Phone</label>
                    <input value="@Model.PhoneHotline" type="text" asp-for="PhoneHotline" id="exampleInputName1" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Phone Mobile</label>
                    <input value="@Model.PhoneMobile" type="text" asp-for="PhoneMobile" id="exampleInputName1" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Email</label>
                    <input value="@Model.Email" type="text" asp-for="Email" id="exampleInputName1" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Open Closed Date</label>
                    <input value="@Model.OpenClosed" type="text" asp-for="OpenClosed" id="exampleInputName1" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Map url</label>
                    <input value="@Model.MapUrl" type="text" asp-for="MapUrl" id="exampleInputName1" placeholder="Name">
                </div>
                <button type="submit" class="btn btn-light">Create Now</button>
            </form>
        </div>
    </div>
</div>
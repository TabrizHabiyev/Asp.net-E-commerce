@model List<Category>
<!--====== Category Part Start ======-->
<section class="category-area category-bg pt-100 pb-100">
    <div class="container-fluid custom-container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="section-title text-center pb-30">
                    <h2 class="title">Featured Categories</h2>
                </div>
            </div>
        </div> <!-- row -->
        @{ int count = 1;}
        <div class="row category-active">
            <div class="col-lg-2">
                @foreach (var item in Model)
                {
                    <div class="single-category text-center">
                        <a target="_blank" href="shop-left-sidebar.html">
                            <img src="~/assets/images/category/@item.ImageUrl" alt="@item.Name">
                            <p>@item.Name</p>
                        </a>
                    </div> <!-- single category -->
                    if (count % 2 == 0 && count != Model.Count)
                    {
                        @Html.Raw("</div>");
                        @Html.Raw("<div class=`col-lg-2`>");
                    }
                    count++;
                }
            </div> <!-- row -->
        </div> <!-- container -->
</section>
<!--====== Category Part Ends ======-->


@Html.Partial("_CompanySliderPartial", ViewData["SliderCompany"])

@Html.Partial("_FeaturesBannerPartial", ViewData["FeaturesBanner"])



